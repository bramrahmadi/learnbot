# ─── LearnBot Environment Configuration ──────────────────────────────────────
# Copy this file to .env and fill in the values.
# NEVER commit .env to version control.

# ─── Application ─────────────────────────────────────────────────────────────
ENVIRONMENT=development
LOG_LEVEL=debug
LOG_FORMAT=text

# ─── Database ────────────────────────────────────────────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_NAME=learnbot
DB_USER=learnbot_admin
DB_PASSWORD=changeme_strong_password_here
DB_SSL_MODE=disable
# Connection pool settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# ─── Redis ───────────────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=changeme_redis_password

# ─── JWT Authentication ───────────────────────────────────────────────────────
JWT_SECRET=changeme_at_least_32_chars_long_secret_key
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=168h

# ─── AWS ─────────────────────────────────────────────────────────────────────
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
# S3 bucket for resume storage
S3_BUCKET=learnbot-dev-resumes

# ─── Service URLs (for local development) ────────────────────────────────────
RESUME_PARSER_URL=http://localhost:8080
JOB_AGGREGATOR_URL=http://localhost:8081
LEARNING_RESOURCES_URL=http://localhost:8082

# ─── API Gateway ─────────────────────────────────────────────────────────────
API_GATEWAY_PORT=8090
API_RATE_LIMIT_RPS=10
API_RATE_LIMIT_BURST=30

# ─── Resume Parser ───────────────────────────────────────────────────────────
RESUME_PARSER_PORT=8080
UPLOAD_DIR=/tmp/uploads
MAX_FILE_SIZE_MB=10

# ─── Job Aggregator ──────────────────────────────────────────────────────────
JOB_AGGREGATOR_PORT=8081
SCRAPE_INTERVAL_MINUTES=60

# ─── Learning Resources ──────────────────────────────────────────────────────
LEARNING_RESOURCES_PORT=8082

# ─── Frontend ────────────────────────────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:8090

# ─── Monitoring ──────────────────────────────────────────────────────────────
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme_grafana_password

# ─── Sentry Error Tracking ───────────────────────────────────────────────────
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# ─── Notifications ───────────────────────────────────────────────────────────
SLACK_WEBHOOK_URL=
ALERT_EMAIL=ops@learnbot.example.com
